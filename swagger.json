{
  "openapi": "3.0.3",
  "info": {
    "title": "Elevator App",
    "description": "Elevator App",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:2020/api/elevators/swagger"
    }
  ],
  "paths": {
    "/dev/health": {
      "get": {
        "summary": "Check Elevator Api health",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/HealthSuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/HealthErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "summary": "Get all the elevators",
        "responses": {
          "200": {
            "description": "fetched all elevators",
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/AllElevators"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json":{
                "schema": {
                  "$ref": "#/components/schemas/AllElevatorsError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      
      "HealthSuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "ElevatorApi is healthy"
          }
        }
      },
      "HealthErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Elevator Api is down"
          }
        }
      },
      "AllElevators": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "string",
            "example": "Elevators"
          }
        }
      },
      "AllElevatorsError": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Elevator Api is down"
          }
        }
      }
    }
  }
}